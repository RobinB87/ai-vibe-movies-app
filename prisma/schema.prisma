generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Movie {
  id                    Int     @id @default(autoincrement())
  name                  String
  year                  Int
  genre                 String

  // keep these props until I can remove them safely (UI depends on them currently) 
  rating                Float?
  review                String?
  isOnWatchlist         Boolean?

  userMoviePreferences  UserMoviePreference[]

  // User who created the movie entry
  createdByUserId Int?
  createdByUser   User? @relation("UserCreatedMovies", fields: [createdByUserId], references: [id], onDelete: SetNull)

  @@unique([name, year])
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String

  userMoviePreferences UserMoviePreference[]

  // Movies this user added to the system
  moviesCreated Movie[] @relation("UserCreatedMovies")
}

model UserMoviePreference {
  id            Int      @id @default(autoincrement())
  userId        Int
  movieId       Int
  rating        Float?
  review        String?
  isOnWatchlist Boolean @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
}